<%= form_for(@participant) do |f| %>
  <% if @participant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@participant.errors.count, "error") %> prohibited this participant from being saved:</h2>

      <ul>
      <% @participant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.hidden_field :project_id %>
  </div>
  <div class="field">
    <%= f.hidden_field :user_id %>
  </div>

  <div class="field">
    <%= f.check_box :want_notification %>
    <%= f.label "Notification ?" %><br>
    <i>Recevoir une notification par courriel après chaque changement dans le projet ?</i>
  </div>

  <div class="field">
    <%= f.check_box :want_dailynewsletter %>
    <%= f.label "daily newsletter ?" %><br>
    <i>Recevoir un résumé journalier des changements ?</i>
  </div>
  
  <div class="field">
    <%= f.check_box :want_weeklynewsletter %>
    <%= f.label "weekly newsletter ?" %><br>
    <i>Recevoir un résumé hebdomadaire des changements ?</i>
  </div>
  <br>

  <div class="actions">
    <%= f.submit 'Enregistrer', class: 'btn btn-success' %>
  </div>
<% end %>
