<div class="flex min-h-screen flex-col justify-center aligns-items-center items-center">
  <div id="connexion">
    <h1 class="text-4xl font-bold text-center">Connexion</h1>
    <hr class="my-4">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input input-bordered w-full" %>
      </div>

      <div class="field">
        <%= f.label :password, "Mot de passe" %>
        <%= f.password_field :password, autocomplete: "current-password", class:"input input-bordered w-full" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me, checked: true %>
          <%= f.label :remember_me, "Se souvenir de moi" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Se connecter", class:"btn btn-ghost btn-active w-full mb-3" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>