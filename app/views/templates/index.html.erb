<h1>Modèles</h1>

<div class="overflow-x-auto">
  <table class="table">
    <thead>
      <tr>
        <th>Nom</th>
        <th>Projet source</th>
        <th>Description</th>
        <th>Créé le</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @templates.each do |template| %>
        <% th = JSON.parse(template.project).to_hash %> 
        <tr>
          <td><b><%= template.name %></b></td>
          <td><%= th["name"] %></td>
          <td><%= th["description"] %></td>
          <td><%= l(template.created_at) %></td>
          <td><%= link_to 'Voir', template %></td>
          <td><%= button_to '[X]', template, method: :delete, form: { data: {'turbo-confirm': 'Certain(e) ?' } } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>