<h1 class="mb-6">Participants</h1>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Nom</th>
      <th>Nom de connexion</th>
      <th>Courriel</th>
      <th>Participe Ã </th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.avatar, class:"camino-avatar" if user.avatar.attached? %></td>
        <td style="width:100px;font-weight:bold;"><%= link_to simple_format(user.name), logs_path(id: user.slug) %></td>
        <td style="width:120px;"><%= user.username %></td>
        <td><%= user.email %></td>
        <td>
          <% user.projects.order(:name).each do |project| %>
            <span class="pl-1" style="border-left: .3rem solid <%= project.color %>">
              <% if project.participants.where(user_id:current_user.id).any? %>
                <%= link_to project.name, project_path(project) %>
              <% else %>
                <%= project.name %>
              <% end %>
            </span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr><th colspan=5></th></tr>
  </tfoot>
</table>

<br>
