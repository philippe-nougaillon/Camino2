<h1 class="mb-6">Participants</h1>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Nom</th>
      <th>Nom de connexion</th>
      <th>Courriel</th>
      <th>Participe Ã </th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%# image_tag user.avatar.url(:medium), class:"avatar" %></td>
        <td style="width:100px;font-weight:bold;"><%= link_to simple_format(user.name), logs_path(user:user.id) %></td>
        <td style="width:120px;"><%= user.username %></td>
        <td><%= user.email %></td>
        <td>
          <% user.projects.order(:name).each do |project| %>
            <span style="background-color:<%= project.color %>;padding-left:5px;margin-left:5px;margin-right:5px;"> </span>
            <% if project.participants.where(user_id:current_user.id).any? %>
              <%= link_to project.name, project_path(project) %>
            <% else %>
              <%= project.name %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr><th colspan=5></th></tr>
  </tfoot>
</table>

<br>
